<mapper namespace="Member">

<insert id="insertMember" parameterType="Member" flushCache="true"
 statementType="PREPARED" useGeneratedKeys="true" timeout="20">
 	INSERT INTO MEMBER VALUES(#{id}, #{passwd}, #{name}, #{mail}, #{maildomain}, #{phone})
</insert>

